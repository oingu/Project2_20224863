doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Flashcard App
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    // Custom CSS
    link(rel="stylesheet", href="/client/css/style.css")
    block styles

  body
    // Header Block
    block header
      header.navbar.navbar-expand-lg.navbar-dark.bg-dark
        .container
          a.navbar-brand(href="/") Flashcard App
          button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
            span.navbar-toggler-icon
          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.ms-auto
              li.nav-item
                a.nav-link(href="/") Home
              li.nav-item
                a.nav-link(href="/login") Login
              li.nav-item
                a.nav-link(href="/register") Register

    // Main Content Block
    main
      block content

    // Footer Block
    block footer
      footer.bg-dark.text-light.py-4.mt-5
        .container
          .row
            .col-md-6
              h5 Flashcard App
              p Learn and memorize with flashcards
            .col-md-6.text-md-end
              p Â© 2024 Flashcard App. All rights reserved.

    // Bootstrap JS Bundle with Popper
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    // Custom JS
    script(src="/client/js/main.js")
    block scripts
